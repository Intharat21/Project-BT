#include <iostream>
#include <stdio.h>
#include <fstream>
using namespace std;
int main(){

    cout << "Welcome!!!!" << endl ;

    string name;
    int ID;

    cout << "Username : ";
    cin >> name;

    cout << "ID card : ";
    cin >> ID;

    ofstream file ("User.txt");
    file << name << " "<< ID;
    file.close(); // ปิดไฟล์

    return 0;
}

